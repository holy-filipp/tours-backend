                                                "patronymic": {
                                                    "type": "string",
                                                    "example": "Иванович"
                                                },
                                                "email": {
                                                    "type": "string",
                                                    "example": "foo@bar.com"
                                                },
                                                "birthday": {
                                                    "type": "string",
                                                    "example": "2000-01-01T00:00:00.000000Z"
                                                },
                                                "updated_at": {
                                                    "type": "string",
                                                    "example": "2000-01-01T00:00:00.000000Z"
                                                },
                                                "created_at": {
                                                    "type": "string",
                                                    "example": "2000-01-01T00:00:00.000000Z"
